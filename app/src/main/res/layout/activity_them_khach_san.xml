<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    tools:context=".Activity.ThemKhachSanActivity">
    <!--<android.support.v7.widget.Toolbar-->
        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--android:id="@+id/toolbarThemKhachSan"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="#2196F3"-->
        <!--android:minHeight="?attr/actionBarSize" >-->
    <!--</android.support.v7.widget.Toolbar>-->

    <ImageView
        android:id="@+id/img_khach_san"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="3">
        <Button
            android:id="@+id/btnTaiAnhKhachSan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tải ảnh"
            android:textAllCaps="false"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/edTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wrap_box_edt"
            android:hint="Tên"/>

        <EditText
            android:id="@+id/edSoPhongTrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/wrap_box_edt"
            android:hint="Số phòng trống"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/edKhoangGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/wrap_box_edt"
            android:hint="Khoảng giá"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/edLongtitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/wrap_box_edt"
            android:hint="Longtitude"/>

        <EditText
            android:id="@+id/edLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/wrap_box_edt"
            android:hint="Latitude"/>

        <EditText
            android:id="@+id/edDiaChi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/wrap_box_edt"
            android:hint="Địa chỉ"/>
        <EditText
            android:id="@+id/edSoDienThoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/wrap_box_edt"
            android:hint="Số điện thoại"
            android:inputType="numberDecimal"/>


        <Button
            android:id="@+id/btnThemKhachSan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginTop="2dp"
            android:text="Tạo"
            android:onClick="addKs"
            android:textAllCaps="false"
            android:layout_gravity="center"/>
    </LinearLayout>


</LinearLayout>