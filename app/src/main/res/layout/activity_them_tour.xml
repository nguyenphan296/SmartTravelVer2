<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    tools:context=".Activity.ThemKhachSanActivity">
    <!--<android.support.v7.widget.Toolbar-->
        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--android:id="@+id/toolbarThemTour"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="#2196F3"-->
        <!--android:minHeight="?attr/actionBarSize" >-->
    <!--</android.support.v7.widget.Toolbar>-->

    <ImageView
        android:id="@+id/img_tour"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="3">
        <Button
            android:id="@+id/btnTaiAnhTour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tải ảnh"
            android:textAllCaps="false"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/edTenCongTyCungCap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/wrap_box_edt"
            android:hint="Tên công ty cung cấp" />

        <EditText
            android:id="@+id/edMoTaTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/wrap_box_edt"
            android:hint="Mô tả điểm đến" />

        <EditText
            android:id="@+id/edThoiGianTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/wrap_box_edt"
            android:hint="Thời gian" />

        <EditText
            android:id="@+id/edGiaTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/wrap_box_edt"
            android:hint="Giá" />




        <Button
            android:id="@+id/btnThemTour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginTop="5dp"
            android:text="Tạo"
            android:textAllCaps="false"
            android:layout_gravity="center"/>
    </LinearLayout>


</LinearLayout>